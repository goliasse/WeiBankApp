    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottom_tabs_bg_color"
        android:layout_below="@id/syxq_fl">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/shouyi_c"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/touzhishouyi"
                    android:layout_gravity="center"
                    android:textColor="@color/de_white"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/touzhishouyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/account_money"
                    android:textColor="@color/de_white"
                    android:textSize="30sp"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/shouyi_b"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jiangli_touzhishouyi"
                    android:textColor="@color/de_white"
                    android:textSize="25sp"/>

                <TextView
